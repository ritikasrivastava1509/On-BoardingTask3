@{
    ViewBag.Title = "Index";
}
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<script src="~/Scripts/bootstrap.min.js"></script>
<script src="~/Scripts/knockout-3.4.2.js"></script>
<script src="~/Scripts/KO_CustomerScript.js"></script>

<h2>Customer</h2>
<div class="container" style="margin-top:3%">
    <a href="#" class="btn btn-primary" data-target="#MyCustomer" data-toggle="modal"> Add New Customer</a> <br> <br />

    <table class="table">
        <tr>
            <th>
                Name
            </th>
            <th>
                Address
            </th>
            <th></th>
        </tr>
        <tbody data-bind="foreach: Customers" id="customerview">
            <tr>
                <td data-bind="text: ID" class="hidden"></td>
                <td data-bind="text: Name"></td>
                <td data-bind="text: Address"></td>
                <td>
                    <a data-bind="click: $parent.EditCustomer" class='btn btn-warning'><span class='glyphicon glyphicon-edit'></span></a>
                    <a data-bind="click:$parent.ShowDeletedCustomer" class='btn btn-danger'><span class='glyphicon glyphicon-trash'></span></a>
                </td>
            </tr>
        </tbody>
    </table>
    <div class="modal fade" id="MyCustomer">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <a href="#" class="close" data-dismiss="modal">&times;</a>
                    <h4 id="ModalTitle">Customer</h4>
                </div>
                <div class="modal-body" id="newcustomersection">

                    <input class="form-control" type="text" data-bind="value: customerViewModel.Name" name="Name" id="Name" placeholder="Name*" />
                    <input class="form-control" type="text" data-bind="value: customerViewModel.Address" name="Address" id="Address" placeholder="Address*" />
                    <div style="text-align:center;display:none" id="loaderDiv">
                        <img src="~/Content/loader.gif" width="250" />
                    </div>
                    <div class="modal-footer">
                        <a href="#" class="btn btn-default" data-dismiss="modal">Cancel</a>
                        <input type="button" data-bind="click: AddNewCustomerRecord" value="Create" class="btn btn-success" />
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="modal fade" id="MyCustomerEdit">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <a href="#" class="close" data-dismiss="modal">&times;</a>
                    <h4>Customer Edit</h4>
                </div>
                <div class="modal-body"  data-bind="with: SelectedCustomer">

                    <input class="form-control" type="text" data-bind="value: Name" placeholder="Name*" />
                    <input class="form-control" type="text" data-bind="value: Address" placeholder="Address*" />
                </div>
                <div class="modal-footer">
                    <a href="#" class="btn btn-default" data-dismiss="modal">Cancel</a>
                    <input type="button" data-bind="click: SaveCustomer" value="Save" class="btn btn-success" />
                </div>
            </div>
        </div>
    </div>
 <div class="modal fade" id="MyCustomerDelete">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <a href="#" class="close" data-dismiss="modal">&times;</a>
                    <h4>Customer Delete</h4>
                    <label id="errorMessageText"></label>
                </div>
                <div class="modal-body" data-bind="with:SelectedCustomer">
                    <dl class="dl-horizontal">
                        <dt>
                            <label>Name</label>
                        </dt>
                        <dd>
                            <label data-bind="text: Name"></label>
                        </dd>
                        <dt>
                            <label>Address</label>
                        </dt>
                        <dd>
                            <label data-bind="text: Address"></label>
                        </dd>
                    </dl>
                    </div>
                    <div class="modal-footer">
                        <a href="#" class="btn btn-default" data-dismiss="modal">Cancel</a>
                        <input type="submit" value="Delete" data-bind="click:DeletedCustomer" class="btn btn-success" id="deleteCustomer" />
                    </div>
                </div>
            </div>
        </div>
    </div>

